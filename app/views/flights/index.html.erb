<h1>Listing flights</h1>

<table>
  <tr>
    <th>From airport</th>
    <th>To airport</th>
    <th>Takeoff at</th>
    <th>Landing at</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.from_airport %></td>
    <td><%= flight.to_airport %></td>
    <td><%= flight.takeoff_at %></td>
    <td><%= flight.landing_at %></td>
    <td><%= flight.price %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

